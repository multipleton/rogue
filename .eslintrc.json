{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "globals": {
    "EventEmiter": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "script"
  },
  "rules": {
    "operator-linebreak": "off",
    "arrow-parens": "off",
    "implicit-arrow-linebreak": "off",
    "func-names": "off",
    "object-curly-newline": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "no-continue": "off"
  }
}
